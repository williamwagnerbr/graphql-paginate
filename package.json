{
  "name": "graphql-paginate",
  "version": "0.0.1",
  "description": "Higher-order function to enable paginate results on server-side",
  "private": false,
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "graphql": "^14.4.2",
    "ts-node": "^7.0.1",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "@types/node": "^10.12.12",
    "@types/jest": "^23.3.10",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "prettier": "^1.12.1",
    "jest": "^29.3.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
